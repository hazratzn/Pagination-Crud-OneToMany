@model WeekendDiscount
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <div class="img">
        <img src="~/assets/img/@Model.Images" alt="slider" style="width:250px;height:250px" />
    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>

            <label class="mt-2" asp-for="Name"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Name" maxlength="500">

            <label class="mt-2" asp-for="Discount"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Discount" maxlength="500">

            <label class="mt-2" asp-for="Decription"></label>
            <input type="text" class="form-control" style="width:300px" asp-for="Decription" maxlength="500">
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>